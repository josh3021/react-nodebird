{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "globals": {
    "Promise": "writable"
  },
  "extends": ["airbnb", "prettier"],
  "plugins": ["import", "react-hooks", "prettier"],
  "rules": {
    "react/jsx-filename-extension": [0],
    "react/prefer-stateless-function": 0,
    "react/jsx-one-expression-per-line": 0,
    "prettier/prettier": ["error"]
  }
}
